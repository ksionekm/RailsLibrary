<h1>Rent History</h1>

<br>

<% unless @rents.empty? %>
<table class="table-striped table-bordered">
  <caption>Rents</caption>
  <thead>
    <tr>
      <th>User</th>
      <th>Book Title</th>
      <th>Rented at</th>
      <th>Returned at</th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each do |rent| %>
      <tr>
        <td><%= rent.user.email %></td>
        <td><% if rent.book != nil %><%= rent.book.title %><% else %>Book deleted<% end %></td>
        <td><%= rent.rent_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><% if rent.return_at != nil %><%= rent.return_at.strftime("%Y-%m-%d %H:%M") %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'Back', books_path, class: "btn btn-info" %>
